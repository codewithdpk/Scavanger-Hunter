<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".activities.AuthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/app_logo"
                android:layout_gravity="center_horizontal"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_semibold"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:text="Scavanger"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_semibold"
                    android:textColor="@color/primary"
                    android:textSize="20dp"
                    android:text="Hunter"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_continue_with_google"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_continue_with_google"
                android:text="Continue with Google"
                android:fontFamily="@font/font_semibold"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_marginVertical="10dp"
                android:textSize="15dp"
                />

            <Button
                android:id="@+id/btn_continue_with_facebook"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_continue_with_facebook"
                android:text="Continue with Facebook"
                android:fontFamily="@font/font_semibold"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_marginVertical="10dp"
                android:textSize="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="145dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="#c4c4c4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:layout_gravity="center_vertical"

                    android:textSize="18dp"
                    android:textColor="#c4c4c4"
                    android:layout_marginHorizontal="20dp"
                    />

                <View
                    android:layout_width="145dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"

                    android:background="#c4c4c4"/>

            </LinearLayout>

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_one"
                android:padding="10dp"
                android:hint="Email"
                android:fontFamily="@font/font_normal"
                android:textSize="15dp"
                android:textColor="#c4c4c4"
                android:inputType="textEmailAddress"
                android:textColorHint="#c4c4c4"

                android:layout_marginVertical="10dp"
                />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_one"
                android:padding="10dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:fontFamily="@font/font_semibold"
                android:textSize="15dp"
                android:textColor="#c4c4c4"
                android:textColorHint="#c4c4c4"
                android:layout_marginVertical="10dp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <TextView
                    android:id="@+id/txt_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_semibold"
                    android:text="Sign up"
                    android:textColor="@color/primary"

                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/txt_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_semibold"
                    android:text="Forgot Password?"
                    android:textColor="@color/primary"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>




            <Button
                android:id="@+id/btn_signin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_primary"
                android:text="Continue"
                android:fontFamily="@font/font_semibold"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_marginVertical="10dp"
                android:textSize="15dp"
                />

        </LinearLayout>





    </LinearLayout>



</RelativeLayout>